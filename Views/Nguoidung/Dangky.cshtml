
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title>Dangky</title>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header text-center">
                <h4>Đăng ký tài khoản</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="form-group row mb-3">
                        <label for="HotenKH" class="col-sm-4 col-form-label">Họ tên khách hàng:</label>
                        <div class="col-sm-8">
                            @Html.TextBox("HotenKH", null, new { @class = "form-control", placeholder = "Nhập họ tên" })
                            <small class="text-danger">@ViewData["Loi"]</small>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="TenDN" class="col-sm-4 col-form-label">Tên đăng nhập:</label>
                        <div class="col-sm-8">
                            @Html.TextBox("TenDN", null, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
                            <small class="text-danger">@ViewData["Loi2"]</small>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="Matkhau" class="col-sm-4 col-form-label">Mật khẩu:</label>
                        <div class="col-sm-8">
                            @Html.Password("Matkhau", null, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                            <small class="text-danger">@ViewData["Loi3"]</small>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="Matkhauhatrlai" class="col-sm-4 col-form-label">Mật khẩu nhắc lại:</label>
                        <div class="col-sm-8">
                            @Html.Password("Matkhauhatrlai", null, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
                            <small class="text-danger">@ViewData["Loi4"]</small>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="Email" class="col-sm-4 col-form-label">Email:</label>
                        <div class="col-sm-8">
                            @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Nhập tên email" })
                            <small class="text-danger">@ViewData["Loi5"]</small>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="Diachi" class="col-sm-4 col-form-label">Địa chỉ:</label>
                        <div class="col-sm-8">
                            @Html.TextBox("Diachi", null, new { @class = "form-control", placeholder = "Nhập địa chỉ" })
                            @*<small class="text-danger">@ViewData["Loi2"]</small>*@
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="Dienthoai" class="col-sm-4 col-form-label">Điện thoại:</label>
                        <div class="col-sm-8">
                            @Html.TextBox("Dienthoai", null, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                            <small class="text-danger">@ViewData["Loi6"]</small>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="Ngaysinh" class="col-sm-4 col-form-label">Ngày sinh:</label>
                        <div class="col-sm-8">
                            <input type="date" name="Ngaysinh" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-8 offset-sm-4">
                            <input type="submit" value="Đăng ký" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
</html>
